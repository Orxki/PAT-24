{$R *.dfm}

procedure TForm4.Button1Click(Sender: TObject);
var
  rWeight, rHeight, rBMI, rAge: real;
  sSex: string;

begin
  rWeight := spnWeight.value;

  rHeight := spnHeight.value / 100;
  rAge := spnAge.value;

  rBMI := (rWeight) / (rHeight * rHeight);
  showmessage('Your bmi is  ' + floattostr(rBMI));



end;

